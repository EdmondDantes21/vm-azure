{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "properties": {
    "armRegionName": {
      "default": "eastus",
      "title": "armRegionName",
      "type": "string"
    },
    "networkInterface": {
      "additionalProperties": false,
      "properties": {
        "ipConfigurationName": {
          "default": "ipconfig1",
          "title": "ipConfigurationName",
          "type": "string"
        },
        "name": {
          "default": "my-nic",
          "title": "name",
          "type": "string"
        }
      },
      "required": [
        "name",
        "ipConfigurationName"
      ],
      "title": "networkInterface",
      "type": "object"
    },
    "resourceGroup": {
      "additionalProperties": false,
      "properties": {
        "azureName": {
          "default": "Autopilot",
          "title": "azureName",
          "type": "string"
        },
        "name": {
          "default": "my-resource-group",
          "title": "name",
          "type": "string"
        },
        "reconcilePolicy": {
          "default": "skip",
          "title": "reconcilePolicy",
          "type": "string"
        }
      },
      "required": [
        "name",
        "reconcilePolicy",
        "azureName"
      ],
      "title": "resourceGroup",
      "type": "object"
    },
    "secret": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "default": "my-vm-secret",
          "title": "name",
          "type": "string"
        },
        "vmPassword": {
          "default": "YourSecurePassword123!",
          "title": "vmPassword",
          "type": "string"
        }
      },
      "required": [
        "name",
        "vmPassword"
      ],
      "title": "secret",
      "type": "object"
    },
    "subnet": {
      "additionalProperties": false,
      "properties": {
        "addressPrefix": {
          "default": "10.0.0.0/24",
          "title": "addressPrefix",
          "type": "string"
        },
        "name": {
          "default": "my-subnet",
          "title": "name",
          "type": "string"
        }
      },
      "required": [
        "name",
        "addressPrefix"
      ],
      "title": "subnet",
      "type": "object"
    },
    "virtualNetwork": {
      "additionalProperties": false,
      "properties": {
        "addressPrefix": {
          "default": "10.0.0.0/16",
          "title": "addressPrefix",
          "type": "string"
        },
        "name": {
          "default": "my-vnet",
          "title": "name",
          "type": "string"
        }
      },
      "required": [
        "name",
        "addressPrefix"
      ],
      "title": "virtualNetwork",
      "type": "object"
    },
    "vm": {
      "additionalProperties": false,
      "properties": {
        "adminUsername": {
          "default": "azureuser",
          "title": "adminUsername",
          "type": "string"
        },
        "computerName": {
          "default": "myvm",
          "title": "computerName",
          "type": "string"
        },
        "name": {
          "default": "my-vm",
          "title": "name",
          "type": "string"
        },
        "secretName": {
          "default": "my-vm-secret",
          "title": "secretName",
          "type": "string"
        },
        "vmSize": {
          "default": "Standard_B1s",
          "title": "vmSize",
          "type": "string"
        }
      },
      "required": [
        "name",
        "vmSize",
        "adminUsername",
        "computerName",
        "secretName"
      ],
      "title": "vm",
      "type": "object"
    }
  },
  "required": [
    "armRegionName",
    "resourceGroup",
    "virtualNetwork",
    "subnet",
    "networkInterface",
    "vm",
    "secret"
  ],
  "type": "object"
}